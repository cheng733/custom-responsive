
{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "ES2015",
      "jsx": "react",
      "jsxFactory": "React.createElement",
      "jsxFragmentFactory": "React.Fragment", 
      "declaration": true,
      "removeComments": true,
      "esModuleInterop" : true,
    },
    "include": [
      "src/**/*",
    ],
    "exclude": ["node_modules", "lib", "es"]
  }